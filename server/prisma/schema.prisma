// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================
// MODÈLE USER (MODIFIÉ)
// ==================

model User {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  email         String    @unique
  password      String
  
  // Avatar
  avatar        Json?
  
  // Économie
  coins         Int       @default(0)
  gems          Int       @default(0)
  
  // Expérience
  experience    Int       @default(0)
  level         Int       @default(1)
  
  // ✅ NOUVEAU: Système admin
  role          String    @default("user")  // user, vip, room_designer, community_manager, moderator, admin, owner
  
  // ✅ NOUVEAU: Bannissement
  isBanned      Boolean   @default(false)
  banExpiresAt  DateTime?
  banReason     String?
  
  // ✅ NOUVEAU: Mute
  isMuted       Boolean   @default(false)
  muteExpiresAt DateTime?
  muteReason    String?
  
  // ✅ NOUVEAU: Avertissements
  warnings      Int       @default(0)
  
  // ✅ NOUVEAU: Mode invisible (ghost)
  isInvisible   Boolean   @default(false)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  rooms         Room[]
  messages      Message[]
  quests        UserQuest[]
  badges        UserBadge[]
  adminLogs     AdminLog[] @relation("AdminActions")
  targetLogs    AdminLog[] @relation("TargetUser")
  privateMessagesFrom PrivateMessage[] @relation("MessageFrom")
  privateMessagesTo   PrivateMessage[] @relation("MessageTo")
  
  @@index([username])
  @@index([email])
  @@index([role])
  @@index([isBanned])
}

// ==================
// MODÈLE ROOM (EXISTANT)
// ==================

model Room {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  isPublic    Boolean   @default(true)
  maxUsers    Int       @default(25)
  ownerId     Int
  owner       User      @relation(fields: [ownerId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  messages    Message[]
  edits       RoomEdit[]
  
  @@index([ownerId])
  @@index([isPublic])
}

// ==================
// MODÈLE MESSAGE (EXISTANT)
// ==================

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  userId    Int
  roomId    Int
  user      User     @relation(fields: [userId], references: [id])
  room      Room     @relation(fields: [roomId], references: [id])
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([roomId])
  @@index([createdAt])
}

// ==================
// MODÈLE PRIVATEMESSAGE (EXISTANT)
// ==================

model PrivateMessage {
  id         Int      @id @default(autoincrement())
  content    String
  fromId     Int
  toId       Int
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())
  
  from       User     @relation("MessageFrom", fields: [fromId], references: [id])
  to         User     @relation("MessageTo", fields: [toId], references: [id])
  
  @@index([fromId])
  @@index([toId])
  @@index([isRead])
  @@index([createdAt])
}

// ==================
// MODÈLE QUEST (EXISTANT)
// ==================

model Quest {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  type        String      // tutorial, daily, weekly
  reward      Json        // { coins: 100, experience: 50 }
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  
  userQuests  UserQuest[]
}

model UserQuest {
  id          Int      @id @default(autoincrement())
  userId      Int
  questId     Int
  progress    Int      @default(0)
  isCompleted Boolean  @default(false)
  completedAt DateTime?
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id])
  quest       Quest    @relation(fields: [questId], references: [id])
  
  @@unique([userId, questId])
  @@index([userId])
  @@index([questId])
}

// ==================
// ✅ NOUVEAU: MODÈLE BADGE
// ==================

model Badge {
  id            Int       @id @default(autoincrement())
  code          String    @unique
  name          String
  description   String?
  imageUrl      String?
  isAdminOnly   Boolean   @default(false)
  createdAt     DateTime  @default(now())
  
  users         UserBadge[]
  
  @@index([code])
  @@index([isAdminOnly])
}

// ==================
// ✅ NOUVEAU: MODÈLE USERBADGE (RELATION)
// ==================

model UserBadge {
  id        Int      @id @default(autoincrement())
  userId    Int
  badgeId   Int
  givenBy   Int?     // ID de l'admin qui a donné le badge
  givenAt   DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge     Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  
  @@unique([userId, badgeId])
  @@index([userId])
  @@index([badgeId])
  @@index([givenBy])
}

// ==================
// ✅ NOUVEAU: MODÈLE ADMINLOG
// ==================

model AdminLog {
  id           Int      @id @default(autoincrement())
  adminId      Int
  targetUserId Int?
  action       String   // ban, unban, mute, unmute, kick, give_badge, remove_badge, give_coins, etc.
  reason       String?
  details      Json?    // Détails supplémentaires (durée, montant, etc.)
  createdAt    DateTime @default(now())
  
  admin        User     @relation("AdminActions", fields: [adminId], references: [id])
  targetUser   User?    @relation("TargetUser", fields: [targetUserId], references: [id])
  
  @@index([adminId])
  @@index([targetUserId])
  @@index([action])
  @@index([createdAt])
}

// ==================
// ✅ NOUVEAU: MODÈLE ROOMEDIT (HISTORIQUE)
// ==================

model RoomEdit {
  id        Int      @id @default(autoincrement())
  roomId    Int
  adminId   Int
  changes   Json     // Détails des modifications (couleur murs, sol, meubles, etc.)
  createdAt DateTime @default(now())
  
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  
  @@index([roomId])
  @@index([adminId])
  @@index([createdAt])
}
